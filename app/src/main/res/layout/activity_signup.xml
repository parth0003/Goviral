<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SignupActivity">
    <ImageView
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo_bago"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/curve_shap"
            android:layout_marginTop="50dp"
            android:layout_weight="0.80"
            android:orientation="vertical">
            <com.applligent.bagoapp.Model.VerticalTextView
                style="@style/verticalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:id="@+id/signUpTv"
                android:gravity="bottom|right"
                android:layout_marginTop="40dp"
                android:text="SIGN UP"
                android:textStyle="bold"/>
            <com.applligent.bagoapp.Model.VerticalTextView
                style="@style/verticalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|right"
                android:layout_marginTop="10dp"
                android:id="@+id/signInIv"
                android:text="SIGN IN"
                android:onClick="signin"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_weight="0.20"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="5dp"
            android:elevation="10dp"
            android:background="@drawable/card_back"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WELCOME"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="USER NAME"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_back"
                android:layout_marginTop="3dp"
                android:padding="10dp">
                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="0.10"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:inputType="text"
                    android:text="John Smith"
                    android:background="@null"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.90"
                    android:layout_gravity="center"
                    android:src="@drawable/user"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="EMAIL"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_back"
                android:layout_marginTop="3dp"
                android:padding="10dp">
                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="0.10"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:inputType="text"
                    android:text="jhonsmith12@gmail.com"
                    android:background="@null"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.90"
                    android:layout_gravity="center"
                    android:src="@drawable/email"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="PASSWORD"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_back"
                android:layout_marginTop="3dp"
                android:padding="10dp">
                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="0.10"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:inputType="textPassword"
                    android:text="John Smith"
                    android:background="@null"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.90"
                    android:layout_gravity="center"
                    android:src="@drawable/padlock"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="RE-PASSWORD"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_back"
                android:layout_marginTop="3dp"
                android:padding="10dp">
                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="0.10"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:inputType="textPassword"
                    android:text="John Smith"
                    android:background="@null"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.90"
                    android:layout_gravity="center"
                    android:src="@drawable/padlock"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="You Agree On Privacy Policy"
                        android:layout_marginRight="20dp"
                        android:textSize="12sp"/>
                    <View  android:layout_width="150dp"
                        android:layout_height="2dp"
                        android:layerType="software"
                        android:layout_toLeftOf="@+id/text"
                        android:background="@drawable/text_side_line"/>
                </LinearLayout>


                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:checked="true"
                    android:text=""/>
            </LinearLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="SIGN UP"
                android:id="@+id/signup"
                android:textStyle="bold"
                android:onClick="dashboard"
                android:background="@drawable/button_back"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>


    </FrameLayout>

</LinearLayout>
